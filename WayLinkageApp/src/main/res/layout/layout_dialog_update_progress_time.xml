<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--android:background="@drawable/shape_simple_dialog"-->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/dialog_add_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm040"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginRight="@dimen/dm040"
        android:layout_marginTop="@dimen/dm045"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="@dimen/dm010"
        android:textColorHint="@color/cccccc"
        android:textCursorDrawable="@drawable/shape_cursor_color_main_color"
        android:textSize="@dimen/dm028"
        app:met_autoValidate="true"
        app:met_baseColor="@color/color_1a"
        app:met_clearButton="true"
        app:met_errorColor="@color/mainColor"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelPadding="@dimen/dm020"
        app:met_maxCharacters="10"
        app:met_primaryColor="@color/mainColor"
        app:met_singleLineEllipsis="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dm040"
        android:text="本次汇报实际日期"
        android:textColor="@color/cccccc"
        android:textSize="@dimen/dm027" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm050"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginRight="@dimen/dm030"
        android:layout_marginTop="@dimen/dm025"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/real_start_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_fragment_2_dialog_tab"
            android:clickable="true"
            android:paddingBottom="@dimen/dm013"
            android:paddingLeft="@dimen/dm010"
            android:paddingRight="@dimen/dm010"
            android:paddingTop="@dimen/dm013"
            android:text="2018-01-01"
            android:textColor="@color/color999999"
            android:textSize="@dimen/dm026" />

        <View
            android:layout_width="@dimen/dm040"
            android:layout_height="@dimen/dm001"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dm020"
            android:background="@color/cccccc"></View>

        <TextView
            android:id="@+id/real_end_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm020"
            android:background="@drawable/selector_fragment_2_dialog_tab"
            android:button="@null"
            android:clickable="true"
            android:paddingBottom="@dimen/dm013"
            android:paddingLeft="@dimen/dm010"
            android:paddingRight="@dimen/dm010"
            android:paddingTop="@dimen/dm013"
            android:text="2018-12-31"
            android:textColor="@color/color999999"
            android:textSize="@dimen/dm026" />
    </LinearLayout>

    <include layout="@layout/layout_line_1px_d9d9d9"></include>

    <Button
        android:id="@+id/dialog_add_card_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_bg_white_f2"
        android:gravity="center"
        android:padding="@dimen/dm010"
        android:text="@string/save"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/dm028" />
</LinearLayout>
