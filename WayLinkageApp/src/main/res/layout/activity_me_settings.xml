<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_left_center" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dm030"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_10"
            android:text="版本信息"
            android:textColor="@color/color_1a"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/dp_10"
            android:text="V1.0.01"
            android:textColor="@color/b3"
            android:textSize="@dimen/dp_14" />

    </RelativeLayout>

    <include layout="@layout/layout_line_1px_divider"></include>

    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_10"
            android:text="清理缓存"
            android:textColor="@color/color_1a"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_next"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:drawablePadding="@dimen/dm010"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/dp_10"
            android:text="0KB"
            android:textColor="@color/b3"
            android:textSize="@dimen/dp_14" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm078"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dm040"
        android:layout_marginTop="@dimen/dm030"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onLogoutClick"
        android:text="@string/user_logout"
        android:textColor="@color/red_logout"
        android:textSize="@dimen/dm026"
        android:textStyle="bold" />
</LinearLayout>