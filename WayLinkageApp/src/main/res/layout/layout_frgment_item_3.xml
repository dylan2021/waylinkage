<?xml version="1.0" encoding="utf-8"?>
<com.daasuu.bl.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dm600"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dm020"
    app:bl_arrowDirection="bottom"
    app:bl_arrowHeight="@dimen/dm010"
    app:bl_arrowPosition="@dimen/dm288"
    app:bl_arrowWidth="@dimen/dm020"
    app:bl_cornersRadius="@dimen/dm030"
    app:bl_strokeColor="@color/f5f5f5"
    app:bl_strokeWidth="@dimen/dm001">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dm020">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/frgmnet0_item3_process_tv"
                style="@style/px24_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm025"
                android:drawablePadding="@dimen/dm010"
                android:drawableTop="@drawable/ic_report_progress"
                android:gravity="center_horizontal"
                android:padding="@dimen/dm020"
                android:text="进度" />


            <TextView
                android:id="@+id/frgmnet0_item3_quailty_tv"
                style="@style/px24_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm025"
                android:drawablePadding="@dimen/dm010"
                android:drawableTop="@drawable/ic_report_quality"
                android:gravity="center_horizontal"
                android:padding="@dimen/dm020"
                android:text="质量" />


            <TextView
                android:id="@+id/frgmnet0_item3_safy_tv"
                style="@style/px24_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm025"
                android:drawablePadding="@dimen/dm010"
                android:drawableTop="@drawable/ic_report_safy"
                android:gravity="center_horizontal"
                android:padding="@dimen/dm020"
                android:text="安全" />


            <TextView
                android:id="@+id/frgmnet0_item4_start_work_tv"
                style="@style/px24_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm025"
                android:drawablePadding="@dimen/dm010"
                android:drawableTop="@drawable/ic_report_start"
                android:gravity="center_horizontal"
                android:padding="@dimen/dm020"
                android:text="开工" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dm010"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/frgmnet0_item5_finished_work_tv"
                style="@style/px24_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm025"
                android:drawablePadding="@dimen/dm010"
                android:drawableTop="@drawable/ic_monitor_complete_application"
                android:gravity="center_horizontal"
                android:padding="@dimen/dm020"
                android:text="完工" />

            <TextView
                android:id="@+id/frgmnet0_changed_work_tv"
                style="@style/px24_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm025"
                android:drawablePadding="@dimen/dm010"
                android:drawableTop="@drawable/ic_monitor_change_application"
                android:gravity="center_horizontal"
                android:padding="@dimen/dm020"
                android:text="变更" />
        </LinearLayout>
    </LinearLayout>
</com.daasuu.bl.BubbleLayout>