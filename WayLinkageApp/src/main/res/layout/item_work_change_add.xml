<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical">


    <TextView
        android:id="@+id/plan_name_tv"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/item_height"
        android:gravity="center"
        android:text=""
        android:background="@drawable/shape_bottom_line_white_bg_eee"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/dm026" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">

        <TextView
            style="@style/px26_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="计划开始日期" />

        <TextView
            android:id="@+id/real_start_time_tv"
            style="@style/px26_999"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawablePadding="@dimen/dm020"
            android:drawableRight="@drawable/ic_next"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:hint="-"
            android:maxLines="1"
            android:textColorHint="@color/color_hint" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">

        <TextView
            style="@style/px26_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="计划完工日期" />


        <TextView
            android:id="@+id/real_end_time_tv"
            style="@style/px26_999"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawablePadding="@dimen/dm020"
            android:drawableRight="@drawable/ic_next"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:hint="-"
            android:maxLines="1"
            android:textColorHint="@color/color_hint" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        android:gravity="center_vertical">

        <TextView
            style="@style/px26_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="计划产值" />


        <TextView
            android:id="@+id/plan_period_tv"
            style="@style/px26_999"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawablePadding="@dimen/dm020"
            android:drawableRight="@drawable/ic_next"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:hint="-"
            android:maxLines="1"
            android:paddingLeft="@dimen/dm120"
            android:text=""
            android:textColorHint="@color/color_hint" />
    </RelativeLayout>

    <include layout="@layout/layout_line_1px_white" />

</LinearLayout>