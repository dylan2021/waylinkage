<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/saft_train_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dm015"
    android:layout_marginLeft="@dimen/dm020"
    android:layout_marginRight="@dimen/dm020"
    android:layout_marginTop="@dimen/dm015"
    android:background="@drawable/shape_eeeeee_15px"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dm005"
    android:paddingLeft="@dimen/dm025"
    android:paddingRight="@dimen/dm025"
    android:paddingTop="@dimen/dm005"
    tools:showIn="@layout/activity_safy_add">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height">

        <TextView
            style="@style/px26_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="检查时间" />

        <TextView
            android:id="@+id/check_real_start_time_tv"
            style="@style/px26_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm030"
            android:background="@null"
            android:ellipsize="end"
            android:hint="未选择"
            android:maxLines="1"
            android:textColorHint="@color/color_hint" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_next" />
    </RelativeLayout>

    <include layout="@layout/layout_line_1px_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height">

        <TextView
            style="@style/px26_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="检查区域" />

        <TextView
            android:id="@+id/area_tv"
            style="@style/px26_666"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:hint="未填写"
            android:maxLines="1"
            android:paddingRight="@dimen/dm030"
            android:textColorHint="@color/color_hint" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_next" />

    </RelativeLayout>

    <include layout="@layout/layout_line_1px_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height">

        <TextView
            style="@style/px26_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="是否存在安全隐患" />

        <TextView
            android:id="@+id/has_danger_tv"
            style="@style/px26_666"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:paddingRight="@dimen/dm030"
            android:text="不存在"
            android:textColorHint="@color/color_hint" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_next" />

    </RelativeLayout>

    <include layout="@layout/layout_line_1px_white" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height">

        <TextView
            style="@style/px26_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="检查人" />

        <TextView
            android:id="@+id/checker_tv"
            style="@style/px26_666"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:hint="未填写"
            android:maxLines="1"
            android:paddingRight="@dimen/dm030"
            android:textColorHint="@color/color_hint" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_next" />

    </RelativeLayout>

    <include layout="@layout/layout_line_1px_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height">

        <TextView
            style="@style/px26_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="检查情况" />

        <TextView
            android:id="@+id/check_result_tv"
            style="@style/px26_666"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:hint="未填写"
            android:maxLines="1"
            android:paddingRight="@dimen/dm030"
            android:textColorHint="@color/color_hint" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_next" />

    </RelativeLayout>

</LinearLayout>