<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clipToPadding="false"
    android:descendantFocusability="afterDescendants"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        style="@style/px22_333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dm030"
        android:layout_marginTop="@dimen/dm030"
        android:text="标段" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RadioGroup
            android:id="@+id/rg_top_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm020"
            android:layout_marginRight="@dimen/dm030"
            android:layout_marginTop="@dimen/dm020"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="@dimen/filter_bt_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm030"
                android:background="@drawable/selector_fragment_2_dialog_tab"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingBottom="@dimen/filter_padding_top_bottom"
                android:paddingTop="@dimen/filter_padding_top_bottom"
                android:text="标段1"
                android:textColor="@color/color_seletor_main_color_666666"
                android:textSize="@dimen/dm026" />

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="@dimen/filter_bt_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:background="@drawable/selector_fragment_2_dialog_tab"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="@dimen/filter_padding_top_bottom"
                android:paddingTop="@dimen/filter_padding_top_bottom"
                android:text="标段2"
                android:textColor="@color/color_seletor_main_color_666666"
                android:textSize="@dimen/dm026" />

            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="@dimen/filter_bt_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:background="@drawable/selector_fragment_2_dialog_tab"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="@dimen/filter_padding_top_bottom"
                android:paddingTop="@dimen/filter_padding_top_bottom"
                android:text="标段3"
                android:textColor="@color/color_seletor_main_color_666666"
                android:textSize="@dimen/dm026" />

            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="@dimen/filter_bt_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:background="@drawable/selector_fragment_2_dialog_tab"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="@dimen/filter_padding_top_bottom"
                android:paddingTop="@dimen/filter_padding_top_bottom"
                android:text="标段4"
                android:textColor="@color/color_seletor_main_color_666666"
                android:textSize="@dimen/dm026" />

            <RadioButton
                android:id="@+id/rb5"
                android:layout_width="@dimen/filter_bt_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:background="@drawable/selector_fragment_2_dialog_tab"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="@dimen/filter_padding_top_bottom"
                android:paddingTop="@dimen/filter_padding_top_bottom"
                android:text="标段5"
                android:textColor="@color/color_seletor_main_color_666666"
                android:textSize="@dimen/dm026" />

            <RadioButton
                android:id="@+id/rb6"
                android:layout_width="@dimen/filter_bt_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:background="@drawable/selector_fragment_2_dialog_tab"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="@dimen/filter_padding_top_bottom"
                android:paddingTop="@dimen/filter_padding_top_bottom"
                android:text="标段6"
                android:textColor="@color/color_seletor_main_color_666666"
                android:textSize="@dimen/dm026" />

            <RadioButton
                android:id="@+id/rb7"
                android:layout_width="@dimen/filter_bt_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:background="@drawable/selector_fragment_2_dialog_tab"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="@dimen/filter_padding_top_bottom"
                android:paddingTop="@dimen/filter_padding_top_bottom"
                android:text="标段7"
                android:textColor="@color/color_seletor_main_color_666666"
                android:textSize="@dimen/dm026" />
        </RadioGroup>
    </HorizontalScrollView>

    <TextView
        style="@style/px22_333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dm030"
        android:text="工地" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RadioGroup
            android:id="@+id/rg_top_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm020"
            android:layout_marginRight="@dimen/dm030"
            android:layout_marginTop="@dimen/dm020"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb10"
                android:layout_width="@dimen/filter_bt_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm030"
                android:background="@drawable/selector_fragment_2_dialog_tab"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingBottom="@dimen/filter_padding_top_bottom"
                android:paddingTop="@dimen/filter_padding_top_bottom"
                android:text="路基"
                android:textColor="@color/color_seletor_main_color_666666"
                android:textSize="@dimen/dm026" />

            <RadioButton
                android:id="@+id/rb11"
                android:layout_width="@dimen/filter_bt_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:background="@drawable/selector_fragment_2_dialog_tab"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="@dimen/filter_padding_top_bottom"
                android:paddingTop="@dimen/filter_padding_top_bottom"
                android:text="桥梁"
                android:textColor="@color/color_seletor_main_color_666666"
                android:textSize="@dimen/dm026" />

            <RadioButton
                android:id="@+id/rb12"
                android:layout_width="@dimen/filter_bt_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:background="@drawable/selector_fragment_2_dialog_tab"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="@dimen/filter_padding_top_bottom"
                android:paddingTop="@dimen/filter_padding_top_bottom"
                android:text="隧道"
                android:textColor="@color/color_seletor_main_color_666666"
                android:textSize="@dimen/dm026" />
        </RadioGroup>
    </HorizontalScrollView>


    <TextView
        style="@style/px22_333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dm030"
        android:text="类型" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RadioGroup
            android:id="@+id/rg_top_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm020"
            android:layout_marginRight="@dimen/dm030"
            android:layout_marginTop="@dimen/dm020"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb21"
                android:layout_width="@dimen/filter_bt_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm030"
                android:background="@drawable/selector_fragment_2_dialog_tab"
                android:button="@null"
                android:checked="true"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/filter_padding_top_bottom"
                android:paddingTop="@dimen/filter_padding_top_bottom"
                android:text="预警"
                android:textColor="@color/color_seletor_main_color_666666"
                android:textSize="@dimen/dm026" />

            <RadioButton
                android:id="@+id/rb22"
                android:layout_width="@dimen/filter_bt_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:background="@drawable/selector_fragment_2_dialog_tab"
                android:button="@null"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/filter_padding_top_bottom"
                android:paddingTop="@dimen/filter_padding_top_bottom"
                android:text="告警"
                android:textColor="@color/color_seletor_main_color_666666"
                android:textSize="@dimen/dm026" />
        </RadioGroup>
    </HorizontalScrollView>


    <TextView
        style="@style/px22_333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dm030"
        android:text="时间范围" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm030"
        android:layout_marginRight="@dimen/dm030"
        android:layout_marginTop="@dimen/dm020"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/filter_time_bt_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm030"
            android:background="@drawable/selector_fragment_2_dialog_tab"
            android:clickable="true"
            android:paddingBottom="@dimen/filter_padding_top_bottom"
            android:paddingLeft="@dimen/filter_padding_left_right"
            android:paddingRight="@dimen/filter_padding_left_right"
            android:paddingTop="@dimen/filter_padding_top_bottom"
            android:text="2018-01-01"
            android:textColor="@color/color_seletor_main_color_666666"
            android:textSize="@dimen/dm026" />

        <View
            android:layout_width="@dimen/dm060"
            android:layout_height="@dimen/dm001"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dm030"
            android:background="@color/color666666"></View>

        <TextView
            android:id="@+id/filter_time_bt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm030"
            android:background="@drawable/selector_fragment_2_dialog_tab"
            android:button="@null"
            android:clickable="true"
            android:paddingBottom="@dimen/filter_padding_top_bottom"
            android:paddingLeft="@dimen/filter_padding_left_right"
            android:paddingRight="@dimen/filter_padding_left_right"
            android:paddingTop="@dimen/filter_padding_top_bottom"
            android:text="2018-12-31"
            android:textColor="@color/color_seletor_main_color_666666"
            android:textSize="@dimen/dm026" />
    </LinearLayout>


    <TextView
        android:id="@+id/menu_ok_bt"
        android:layout_width="@dimen/dm400"
        android:layout_height="@dimen/dm070"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dm030"
        android:layout_marginTop="@dimen/dm020"
        android:background="@drawable/selector_login_bt"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/sure"
        android:textColor="@color/white"
        android:textSize="@dimen/dm028" />

</LinearLayout>