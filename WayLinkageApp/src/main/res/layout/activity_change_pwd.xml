<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ngame="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_left_center" />

    <include layout="@layout/layout_line_1px_divider_dark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dm030"
        android:layout_marginRight="@dimen/dm030"
        android:layout_marginTop="@dimen/dm030"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="16"
            android:paddingLeft="@dimen/dm020"
            android:singleLine="true"
            android:text="旧密码"
            android:textColor="@color/color212121"
            android:textColorHint="@color/color_hint"
            android:textSize="@dimen/dm028" />

        <EditText
            android:id="@+id/old_pwd_et"

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@null"
            android:hint="请填写旧密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="@dimen/dm180"
            android:singleLine="true"
            android:textColor="@color/color212121"
            android:textColorHint="@color/color_hint"
            android:textSize="@dimen/dm030" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dm030"
        android:layout_marginRight="@dimen/dm030"
        android:layout_marginTop="@dimen/dm001"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="16"
            android:paddingLeft="@dimen/dm020"
            android:singleLine="true"
            android:text="新密码"
            android:textColor="@color/color212121"
            android:textColorHint="@color/color_hint"
            android:textSize="@dimen/dm028" />

        <EditText
            android:id="@+id/new_pwd_et1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@null"
            android:hint="请输入新的密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="@dimen/dm180"
            android:textColor="@color/color212121"
            android:textColorHint="@color/color_hint"
            android:textSize="@dimen/dm030" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dm030"
        android:layout_marginRight="@dimen/dm030"
        android:layout_marginTop="@dimen/dm001"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="16"
            android:paddingLeft="@dimen/dm020"
            android:singleLine="true"
            android:text="确认密码"
            android:textColor="@color/color212121"
            android:textColorHint="@color/color_hint"
            android:textSize="@dimen/dm028" />

        <EditText
            android:id="@+id/ensure_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@null"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="@dimen/dm180"
            android:textColor="@color/color212121"
            android:textColorHint="@color/color_hint"
            android:textSize="@dimen/dm030" />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_find_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm070"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dm030"
        android:layout_marginRight="@dimen/dm030"
        android:layout_marginTop="@dimen/dm050"
        android:background="@drawable/selector_login_bt"
        android:onClick="onLoginClick"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/dm028" />

</LinearLayout>