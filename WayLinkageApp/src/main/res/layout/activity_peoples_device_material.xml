<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:onClick="onBackClick"
            android:paddingLeft="@dimen/dm030"
            android:paddingRight="@dimen/dm030"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/titlesize_212121"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="" />

        <ImageButton
            android:id="@+id/pdm_right_add_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@null"
            android:gravity="center"
            android:onClick="peopleAddBt"
            android:paddingLeft="@dimen/dm020"
            android:paddingRight="@dimen/dm030"
            android:src="@drawable/ic_add" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_metarail_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title"
        android:orientation="vertical"
        android:visibility="gone">

        <include layout="@layout/layout_line_1px_divider" />

        <TextView
            android:id="@+id/materail_info_top_tv"
            style="@style/px26_666_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/shape_drawing_left_main_color_7px_22px"
            android:drawablePadding="@dimen/dm015"
            android:drawableRight="@drawable/ic_next_down"
            android:includeFontPadding="false"
            android:paddingBottom="@dimen/dm030"
            android:paddingLeft="@dimen/dm030"
            android:paddingRight="@dimen/dm030"
            android:paddingTop="@dimen/dm030"
            android:text="材料信息" />

        <LinearLayout
            android:id="@+id/materail_info_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm020"
            android:layout_marginLeft="@dimen/dm025"
            android:layout_marginRight="@dimen/dm025"
            android:background="@drawable/shape_eeeeee_10px"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dm020"
            android:paddingRight="@dimen/dm020"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_bottom_line_white_bg_eee">

                <TextView
                    style="@style/px24_666_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dm030"
                    android:text="规格" />

                <TextView
                    android:id="@+id/materail_spec_tv"
                    style="@style/px26_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dm300"
                    android:text="-" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_bottom_line_white_bg_eee">

                <TextView
                    style="@style/px24_666_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dm030"
                    android:text="剩余数量" />

                <TextView
                    android:id="@+id/materail_remain_tv"
                    style="@style/px26_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dm300"
                    android:text="-" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_bottom_line_white_bg_eee">

                <TextView
                    style="@style/px24_666_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dm030"
                    android:text="质量标准" />

                <TextView
                    android:id="@+id/materail_quality_tv"
                    style="@style/px26_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dm300"
                    android:text="-" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_bottom_line_white_bg_eee">

                <TextView
                    style="@style/px24_666_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dm030"
                    android:text="保管人员" />

                <TextView
                    android:id="@+id/materail_store_man_tv"
                    style="@style/px26_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dm300"
                    android:text="-" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_bottom_line_white_bg_eee">

                <TextView
                    style="@style/px24_666_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dm030"
                    android:text="厂家" />

                <TextView
                    android:id="@+id/factory_tv"
                    style="@style/px26_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dm300"
                    android:text="-" />
            </RelativeLayout>
        </LinearLayout>

        <include layout="@layout/layout_line_1px_divider" />

        <TextView
            style="@style/px26_666_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm005"
            android:layout_marginTop="@dimen/dm030"
            android:drawableLeft="@drawable/shape_drawing_left_main_color_7px_22px"
            android:drawablePadding="@dimen/dm015"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/dm030"
            android:text="出入库记录" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm025"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/remain_number_tv"
                style="@style/px24_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm050"
                android:gravity="center_horizontal"
                android:text="0" />

            <TextView
                android:id="@+id/out_number_tv"
                style="@style/px24_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm035"
                android:layout_toRightOf="@id/remain_number_tv"
                android:gravity="center_horizontal"
                android:text="0" />

            <TextView
                android:id="@+id/in_number_tv"
                style="@style/px24_666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm035"
                android:layout_toRightOf="@id/out_number_tv"
                android:gravity="center_horizontal"
                android:text="0" />

            <TextView
                android:id="@+id/material_menu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dm010"
                android:background="@color/transparent"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_material_details_reorder"
                android:drawablePadding="@dimen/dm010"
                android:gravity="right"
                android:padding="@dimen/dm020"
                android:text="全部"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/dm026" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/people_device_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:layout_below="@id/layout_metarail_top_layout"
        android:layout_marginTop="@dimen/line_height"
        android:background="@color/divider_color" />


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/people_device_top"
       >

        <ListView
            android:id="@+id/people_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:divider="@color/divider_color_dark"
            android:dividerHeight="0dp"
            android:listSelector="@color/transparent"
            android:overScrollMode="never"></ListView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <RelativeLayout
        android:id="@+id/employee_add_exit_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm085"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/emplyee_add_bt"
            style="@style/px26_mainColor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_people_manage_enter"
            android:drawablePadding="@dimen/dm010"
            android:paddingLeft="@dimen/dm120"
            android:paddingRight="@dimen/dm070"
            android:text="添加人员" />

        <TextView
            android:id="@+id/emplyee_exit_bt"
            style="@style/px26_mainColor"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dm120"
            android:paddingLeft="@dimen/dm070"
            android:drawableLeft="@drawable/ic_people_manage_exit"
            android:drawablePadding="@dimen/dm010"
            android:text="人员退场" />
        <View
            android:layout_width="@dimen/dm001"
            android:layout_height="@dimen/dm040"
            android:layout_centerInParent="true"
            android:background="@color/divider_color" />
        <View
            android:id="@+id/people_device_top_line_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:layout_alignParentTop="true"
            android:background="@color/divider_color" />
    </RelativeLayout>
</RelativeLayout>